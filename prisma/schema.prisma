generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Issue {
  id          String   @id @default(uuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  title       String
  description String
  priority    Priority
  status      Status   @default(OPEN)
  image       String?
  comments    Comment[]
  updates     Update[]
}

model Comment {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  body      String
  issueId   String
  issue     Issue    @relation(fields: [issueId], references: [id])
}

model Update {
  id          String        @id @default(uuid())
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  description String
  issueId     String
  issue       Issue         @relation(fields: [issueId], references: [id])
  updatePoints UpdatePoint[]
}

model UpdatePoint {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  detail    String
  updateId  String
  update    Update   @relation(fields: [updateId], references: [id])
}

enum Priority {
  LOW
  MEDIUM
  HIGH
}

enum Status {
  OPEN
  IN_PROGRESS
  RESOLVED
  CLOSED
}

